[user]
	email = hsteinshiromoto@iusevimbtw.com
	name = Humberto STEIN SHIROMOTO
	username = hsteinshiromoto
[checkout]
	defaultRemote = origin
[color]
	ui = auto
[column]
	ui = auto
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	pager = delta
[delta]
	navigate = true
[diff]
    colorMoved = default
[fetch]
	prune = true
	pruneTags = true
	all = true
[init]
	defaultBranch = main
[interactive]
    diffFilter = delta --color-only
[push]
	autoSetupRemote = true
	followTags = true
[alias]
	gs='git status'
	gd='git diff --name-only --relative --diff-filter=d | xargs batcat --diff'
	gc="git commit -m '.'"
	gP='git push'
	gp='git pull'
	gfb='git flow bugfix start'
	gfh='git flow hotfix start'
	gfr='git flow release start'
	gff='git flow feature start'
[url "https://git@100.91.80.71:240"]
    insteadOf = git@100.91.80.71:240

