[user]
	email = hsteinshiromoto@gmail.com
	name = Humberto STEIN SHIROMOTO
	username = hsteinshiromoto
[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	pager = delta
[column]
	ui = auto
[init]
	defaultBranch = main
[checkout]
	defaultRemote = origin
[push]
	autoSetupRemote = true
	followTags = true
[fetch]
	prune = true
	pruneTags = true
	all = true
[color]
	ui = auto
